extends layout


block main
  section.album-list-container
    dl.album-list
      dt#album-edit.album-list-items(style='justify-content: end;')
        a(href='/new_album') + New Album
      if albums.length === 0
        p Hmmm... you don't have any albums yet!
        
      each album in albums
        if album.images.length
          a#album-links.album-list-items(href=`/albums/${album.id}`) 🎞️ #{album.name}
            dd Images: #{album.images.length}
        else
          a#album-links.album-list-items.empty(href=`/albums/${album.id}`) 🎞️ #{album.name}
            dd Images: #{album.images.length}
          
        div
      fieldset.pagination
        if (page - 1)
          a(href=`/albums?page=${page - 1}`) ←
        if (page + 1 <= pageCount)
          a(href=`/albums?page=${page + 1}`) →